{
  "extends": "@cloud-ru/ft-config-tsconfig",
  "ts-node": {
    "files": true
  },
  "compilerOptions": {
    "target": "es6",
    "lib": ["es2017", "dom", "dom.iterable", "esnext"],
    "types": ["node"],
    "strict": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": false
  },
  "include": ["./"],
  "exclude": ["node_modules"]
}
